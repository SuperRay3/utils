{
  "name": "@rayuse/utils",
  "version": "0.0.1",
  "main": "dist/main/index.js",
  "typings": "dist/main/index.d.ts",
  "module": "dist/module/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SuperRay3/utils.git"
  },
  "author": "SuperRay3 <https://github.com/SuperRay3>",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && npm run build:main && npm run build:module",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "publish": "bump --commit --tag && npm run build && npm run lint && npm publish",
    "test": "jest",
    "lint-staged": "lint-staged",
    "lint": "eslint src/**/*.{js,ts,vue}",
    "lint:fix": "npm run lint -- --fix",
    "clean": "rimraf dist"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx,vue}": [
      "eslint --fix"
    ]
  },
  "files": [
    "/dist"
  ],
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.8",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.2.0",
    "eslint-plugin-jest": "^25.2.4",
    "husky": "^7.0.0",
    "jest": "^27.3.1",
    "lint-staged": "^12.0.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2",
    "version-bump-prompt": "^6.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "description": "存放一些零散、未分类的工具函数",
  "bugs": {
    "url": "https://github.com/SuperRay3/utils/issues"
  },
  "homepage": "https://github.com/SuperRay3/utils#readme",
  "dependencies": {}
}
