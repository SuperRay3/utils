  "scripts": {
    "build": "node ./scripts/build",
    "release": "bump --commit --tag && npm run build && npm run lint && npm run publish:ci",
    "publish:ci": "node ./scripts/publish.js",
    "typings": "tsc --emitDeclarationOnly",
    "test": "jest --coverage",
    "lint-staged": "lint-staged",
    "lint": "eslint {pcakages,scripts}/**/*.{js,ts,vue}",
    "lint:fix": "npm run lint -- --fix",
    "clean": "rimraf dist typings",
    "docs": "vitepress dev packages --port 9100 --host"
  },
  "lint-staged": {
    "{pcakages,scripts}/**/*.{js,ts,tsx,vue}": [
      "eslint --fix",
			"npm run test"
    ]
  },
  "files": [
    "/dist"
  ],
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.8",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "consola": "^2.15.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.2.0",
    "eslint-plugin-jest": "^25.2.4",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.0",
    "jest": "^27.3.1",
    "lint-staged": "^12.0.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.0",
    "rollup-plugin-dts": "^4.0.1",
    "rollup-plugin-local-resolve": "^1.0.7",
    "rollup-plugin-typescript2": "^0.31.0",
    "rollup-plugin-uglify": "^6.0.4",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2",
    "version-bump-prompt": "^6.1.0",
    "vitepress": "^0.20.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "description": "存放一些零散、未分类的工具函数",
  "bugs": {
    "url": "https://github.com/SuperRay3/utils/issues"
  },
  "homepage": "https://github.com/SuperRay3/utils#readme",
  "dependencies": {}
