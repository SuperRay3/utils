{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom",
    ],
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
		"declarationDir": "./typings",
    "rootDir": "packages",
    "types": [
      "@types/node",
      "@types/jest"
    ]
  },
  "include": [
		"packages"
	],
  "exclude": [
    "node_modules",
    "**/**/*.test.ts",
    "**/**/*.md",
  ]
}
